                        <input name="edits" value="<%= item.isbn %>" type="text">
                        <input name="edits" value="<%= item.description%>" type="text">
                      <button class='edit-details'>Edit Details</button>
                    </form>
                    <form method="POST" action="/delete" class="save-form">
                        <input name="_method" value="DELETE" type="hidden">
                      <button class='view-details'>Delete</button>
                    </form>
                </section>
