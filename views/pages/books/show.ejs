<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="styles/reset.css">
    <link rel="stylesheet" href="styles/base.css">
    <link rel="stylesheet" href="styles/layout.css">
    <link rel="stylesheet" href="styles/modules.css">
    <link rel="stylesheet" href="styles/icons.css">
</head>
<body>
    <h1 id="header">Best Books!</h1>

        <ul class="database-results">
                <% items.forEach(item => { %>
               <li>
                   <section>
                       <h4> <%= item.title %> </h4>
                       <img src="<%= item.image_url %>">
                       <p> Author: <%= item.author %></p>
                       <form method="POST" action="/save" class="save-form">
                           <input name="title" value="<%= item.title %>" type="text" >
                           <input name="author" value="<%= item.author %>" type="text">
                           <input name="img_url" value="<%= item.image_url %>" type="text">
                           <input name="isbn" value="<%= item.isbn %>" type="text">
                           <input name="description" value="<%= item.description%>" type="text">
                           <!-- <input name="_method" value="PUT" type="hidden"> -->
                         <button class='view-details'>View Details</button>
                       </form>
                   </section>
               </li>
               <% }) %>
    
<script
    src="https://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
    <script src='js/app.js'></script>
</body>
</html>